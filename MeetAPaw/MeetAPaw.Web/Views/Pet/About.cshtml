@{
    ViewData["Title"] = "About Meet A Paw";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>


<div class="text-center">
    <h1 class="display-1 justify-content-center"><strong>About Meet A Paw</strong></h1>
</div>

<section id="about">
    <div class="container mt-4 pt-4 bg-light p-2 text-dark bg-opacity-75">
        <div class="row mt-4">
            <div class="col-lg-4">
                <img src="~/about.png" class="imageAboutPage" alt="">
            </div>

            <div class="col-lg-8">
                <h3>We are happy to see you here!</h3>
                <p>
                    <hr />
                    Welcome to Meet A Paw, the ultimate online community for pet lovers!
                    Our platform is designed to bring together pet owners and animal
                    enthusiasts from all walks of life. 
                    Whether you're looking to connect with pet owners, 
                    find a companion for your furry friend, or give a loving home to a pet in need,
                    Meet A Paw is your go-to destination.
                    Discover a world of compassion and make a difference in the life of a 
                    deserving animal through Meet A Paw's Adoption Center. Our platform 
                    is dedicated to helping homeless pets find their forever homes and match 
                    them with loving and responsible owners like you.
                    <hr />
                    Registration is quick and simple.
                    Create a profile for yourself and your beloved pet,
                    providing essential details such as breed, age, personality traits, 
                    and photos. Our user-friendly interface allows you to showcase your
                    pet's unique charm and share their stories with the world.
                </p>    
            </div>
        </div>
</section>

<div class="row row-cols-1 row-cols-md-4 g-3">
    <div class="col">
        <div class="card h-100">
            <div class="card-body justify-content-center">
                <a class="btn btn-secondary" asp-area="" asp-controller="Adopt" asp-action="AdoptDog">Adopt Dog</a>
            </div>
            <img src="~/dog.png" class="card-img-top" alt="Dog photo">
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body justify-content-center">
                <a class="btn btn-secondary" asp-area="" asp-controller="Adopt" asp-action="AdoptCat">Adopt Cat</a>
            </div>
            <img src="~/cat.png" class="card-img-top" alt="Cat photo">
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body justify-content-center">
                <a class="btn btn-secondary" asp-area="" asp-controller="Adopt" asp-action="AdoptBird">Adopt Bird</a>
            </div>
            <img src="~/parrot.png" class="card-img-top" alt="Bird photo">
        </div>
    </div>
    <div class="col">
        <div class="card h-100">
            <div class="card-body justify-content-center">
                <a class="btn btn-secondary" asp-area="" asp-controller="Adopt" asp-action="AdoptRabbit">Adopt Rabbit</a>
            </div>
            <img src="~/rabbit.png" class="card-img-top" alt="Rabbit photo" />
        </div>
    </div>
</div>