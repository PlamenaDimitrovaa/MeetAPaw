@using MeetAPaw.Data.Models.Enums;
@model AddPetViewModel
@{
    ViewBag.Title = "Add Pet";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<h1>Add Pet</h1>

<form class="row g-3">
    <input asp-for="@Model.Id" type="hidden" />
    <div class="col-md-6">
        <label for="inputName" class="form-label">Name</label>
        <input type="text" class="form-control" id="inputName">
    </div>
    <div class="col-md-6">
        <label for="inputPetType" class="form-label">Pet Type</label>
        <select id="inputPetType" class="form-select">
            <option selected>Choose...</option>
            <option>Dog</option>
            <option>Cat</option>
            <option>Rabbit</option>
            <option>Bird</option>
        </select>
    </div>
    <div class="col-12">
        <label for="inputAddress" class="form-label">Address</label>
        <input type="text" class="form-control" id="inputAddress" placeholder="Sofia, Bulgaria">
    </div>
    <div class="col-12">
        <label for="inputDescription" class="form-label">Description</label>
        <input type="text" class="form-control" id="inputDescription" placeholder="Description of the pet....">
    </div>
    <div class="col-md-6">
        <label for="inputImageUrl" class="form-label">ImageUrl</label>
        <input type="url" class="form-control" id="inputImageUrl">
    </div>
    <div class="col-md-4">
        <label for="inputState" class="form-label">Breed</label>
        <input type="text" class="form-control" id="inputBreed" placeholder="Chihuahua">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add Pet</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}