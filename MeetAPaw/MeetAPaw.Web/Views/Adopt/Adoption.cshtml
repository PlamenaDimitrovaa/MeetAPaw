@model AdoptPetViewModel

@{
    ViewData["Title"] = "Adopt";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

<div class="container">
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <img src="@Model.ImageUrl" class="card-img-top" alt="Pet Image">
                <div class="card-body">
                    <h4 class="card-title text-center">@Model.Name</h4>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">Pet Type: @Model.PetType</p>
                    @if(Model.Breed != null)
                    {
                        <p class="card-text">Breed: @Model.Breed</p>
                    }
                    <p class="card-text">Color: @Model.Color</p>
                    <p class="card-text">Date of Birth: @Model.DateOfBirth</p>
                    <p class="card-text">Gender: @Model.Gender</p>
                    <p class="card-text">Shelter: @Model.Shelter</p>

                    <div class="container-fluid">
                        <div class="row">
                            <h5 class="mb-3">Are you sure you want to adopt me?</h5>
                            <div class="col-6">
                                <form asp-controller="Adopt" asp-action="Adoption" method="post">
                                    <input type="hidden" name="petId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-primary">Adopt me</button>
                                </form>
                            </div>
                            <div class="col-6">
                                <form asp-controller="Adopt" asp-action="Adopt" method="get">
                                    <button type="submit" class="btn btn-danger">Back to all pets</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>