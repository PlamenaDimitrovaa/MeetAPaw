@using MeetAPaw.Data.Models.Enums;
@model AddPetForAdoptionViewModel
@{
    ViewBag.Title = "Add Pet For Adoption";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="container-fluid">
    <div class="row text-center">
        <div class="col">
            <img src="~/logo.png" class="img-fluid w-25" />
        </div>
    </div>
</div>

<div class="text-center">
    <h1>Add Pet For Adoption</h1>
</div>
<hr />
<form asp-action="Add" method="post" class="row g-3 bg-light p-2 text-dark bg-opacity-75">
    <input asp-for="@Model.UserId" type="hidden" />

    <div class="col-md-6">
        <label asp-for="@Model.Name" class="form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control" id="inputName" placeholder="Johny" aria-required="true">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.DateOfBirth" class="form-label">Date Of Birth</label>
        @Html.TextBoxFor(model => model.DateOfBirth, new {
            @class = "form-control",
            type = "date"
        })
        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Gender" class="form-label">Gender</label>
        <select asp-for="@Model.Gender" class="form-control" aria-required="true">
            <option>Male</option>
            <option>Female</option>
        </select>
        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.PetTypeId" class="form-label">Pet Type</label>
        <select asp-for="@Model.PetTypeId" class="form-control">
            @foreach (var type in Model.PetsTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.PetTypeId" class="text-danger"></span>
    </div>
   
    <div class="col-md-6">
        <label asp-for="@Model.Breed" class="form-label">Breed</label>
        <input asp-for="@Model.Breed" class="form-control" aria-required="false" id="inputBreed" placeholder="Chihuahua">
    </div>
    <div class="col-md-6">
        <label asp-for="@Model.Color" class="form-label">Color</label>
        <input asp-for="@Model.Color" class="form-control" id="inputName" placeholder="White" aria-required="true">
        <span asp-validation-for="@Model.Color" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.ShelterId" class="form-label">Shelter</label>
        <select asp-for="@Model.ShelterId" class="form-control">
            @foreach (var type in Model.Shelters)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.ShelterId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="@Model.Description" class="form-label">Description</label>
        <input asp-for="@Model.Description" class="form-control" id="inputDescription" aria-required="true" placeholder="Description of the pet....">
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label asp-for="@Model.ImageUrl" class="form-label">ImageUrl</label>
        <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" placeholder="https://img.freepik.com/premium-photo/kitten-white-background-gray-kitten_767502-2113.jpg?w=900" id="inputImageUrl">
        <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
    </div>

    <div class="col-12 text-center">
        <button type="submit" class="btn btn-primary">Add Pet For Adoption</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}