@model ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<input id="userId" type="hidden" value="@Model.Id" />

<div class="col-lg-4">
    <div class="card mb-4">
        <div class="card-body text-center">
            <h5 class="my-3">@Model.FirstName @Model.LastName</h5>
        </div>
    </div>
</div>

<div class="col-lg-8">
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <p class="ms-5" style="font-size:20px">Full Name:</p>
                </div>
                <div class="col-6">
                    <p class="text-muted" style="font-size:20px">@Model.FirstName @Model.LastName</p>
                </div>
                <div class="col-6">
                    <p class="ms-5" style="font-size:20px">Email:</p>
                </div>
                <div class="col-6">
                    <p class="text-muted" style="font-size:20px">@Model.Email</p>
                </div>
            </div>
            <div class="widget user-dashboard-menu">
                <a asp-controller="User" asp-action="OwnedPets" class="btn btn-outline-primary">My Pets</a>
                <a asp-controller="User" asp-action="AdoptedPets" class="btn btn-outline-primary">Adopted pets</a>
                <a asp-controller="Pet" asp-action="Add" class="btn btn-outline-primary">Add pet</a>
                <a asp-controller="PetForAdoption" asp-action="Add" class="btn btn-outline-primary">Add pet for adoption</a>
                <a asp-controller="User" asp-action="Edit" class="btn btn-outline-danger">Edit</a>
            </div>
        </div>
    </div>
</div>
